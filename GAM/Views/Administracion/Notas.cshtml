@model GAM.Models.Models.DocumentosProveedores
@{
    ViewBag.Title = "Notas";
}

<script>

    $(document).ready(function () {

    });

</script>

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Notas y Palabras Clave para simplificar la búsqueda del documento</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">

                    <form method="post" action="GuardarNotas">
                        <div class="col-md-12">

                            <div class="form-group form-inline">
                                <label for="Notas" class="col-md-3 col-form-label fc-left">Notas</label>
                                <div class="col-md-9 p-0">
                                    <textarea class="form-control form-control-sm input-solid" name="Notas" id="Notas" cols="50" rows="5">@Model.Notas</textarea>
                                </div>
                            </div>

                            <div class="form-group form-inline">
                                <label for="PalabrasClave" class="col-md-3 col-form-label fc-left">Palabras Clave</label>
                                <div class="col-md-9 p-0">
                                    <input type="text" class="form-control form-control-sm input-solid" name="PalabrasClave" id="PalabrasClave" value="@Model.PalabrasClave" style="width: 400px" />
                                </div>
                            </div>

                            <input type="hidden" id="Id" name="Id" value="@Request["Id"]" />

                        </div>

                        <div class="col-md-12 text-center">

                            <button type="submit" class="btn btn-success">Guardar</button>

                        </div>


                        


                    </form>




                </div>

            </div>
        </div>
    </div>
</div>

